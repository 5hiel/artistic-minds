# App Store Feedback to GitHub Issues Configuration
# Copy this file and set your actual values
#
# Usage: source feedback-config.env && node fetch-reviews.js

# App Store Connect API Configuration
# Get these from https://appstoreconnect.apple.com/access/api
APP_STORE_CONNECT_ISSUER_ID=your-issuer-id-here
APP_STORE_CONNECT_KEY_ID=your-key-id-here
APP_STORE_APP_ID=your-app-id-here
APP_STORE_CONNECT_PRIVATE_KEY_PATH=./AuthKey_XXXXXXXXXX.p8

# GitHub Configuration
# Use your existing CLAUDE_CODE_OAUTH_TOKEN or create a Personal Access Token
GITHUB_TOKEN=${CLAUDE_CODE_OAUTH_TOKEN}

# Processing Configuration
# How many days back to fetch reviews (default: 7)
FEEDBACK_DAYS_BACK=7

# Minimum rating to process (1-5, default: 1 for all reviews)
FEEDBACK_MIN_RATING=1

# Maximum rating to process (1-5, default: 5 for all reviews)
FEEDBACK_MAX_RATING=5

# Whether to process only critical reviews (1-2 stars)
FEEDBACK_CRITICAL_ONLY=false

# Output Configuration
FEEDBACK_OUTPUT_DIR=./output
FEEDBACK_LOG_LEVEL=info  # debug, info, warn, error

# Rate Limiting
# Requests per minute for App Store Connect API (default: 180, max: 180)
APP_STORE_REQUESTS_PER_MINUTE=180

# GitHub API requests per minute (default: 60 for personal tokens, 5000 for apps)
GITHUB_REQUESTS_PER_MINUTE=60

# Issue Configuration
# Prefix for issue titles
ISSUE_TITLE_PREFIX="App Store Review"

# Whether to create issues for positive reviews (4-5 stars)
CREATE_ISSUES_FOR_POSITIVE_REVIEWS=true

# Whether to automatically respond to critical reviews
AUTO_RESPOND_CRITICAL_REVIEWS=false

# Template for auto-responses (if enabled)
AUTO_RESPONSE_TEMPLATE="Thank you for your feedback. We take all user concerns seriously and will investigate this issue."

# Deduplication Settings
# How many days to look back for duplicate content (default: 30)
DEDUPLICATION_LOOKBACK_DAYS=30

# Minimum similarity threshold for duplicate detection (0.0-1.0, default: 0.8)
DUPLICATE_SIMILARITY_THRESHOLD=0.8

# Advanced Configuration
# Whether to enhance issues with sentiment analysis
ENABLE_SENTIMENT_ANALYSIS=true

# Whether to create version-specific labels
CREATE_VERSION_LABELS=true

# Whether to categorize by territory/region
ENABLE_TERRITORY_LABELS=false

# Notification Settings (optional)
# Slack webhook for notifications
SLACK_WEBHOOK_URL=

# Email for critical issue notifications
NOTIFICATION_EMAIL=

# Example values (replace with your actual configuration):
# APP_STORE_CONNECT_ISSUER_ID=c40803b3-bacc-458b-8485-60029ade2485
# APP_STORE_CONNECT_KEY_ID=7VNJ8VMUU2
# APP_STORE_APP_ID=6751567047
# APP_STORE_CONNECT_PRIVATE_KEY_PATH=./AuthKey_7VNJ8VMUU2.p8